<!DOCTYPE html>
<html>
<head>
  <title>Project Details</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('../partials/sidebar') %>
  <div class="content">
    <%- include('../partials/header', { admin: admin }) %>
    <div class="container-fluid mt-4">
      <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2 mb-3">
        <h3>Project Details</h3>
        <a href="/admin/projects" class="btn btn-secondary">Back</a>
      </div>

      <div class="card mb-3">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6"><strong>Project Name:</strong> <%= project.projectName %></div>
            <div class="col-md-6"><strong>Client Name:</strong> <%= project.clientName %></div>
          </div>
          <div class="row mt-2">
            <div class="col-md-4"><strong>Mobile:</strong> <%= project.mobile %></div>
            <div class="col-md-8"><strong>Business Name:</strong> <%= project.businessName || '—' %></div>
          </div>
          <div class="row mt-2">
            <div class="col-md-4"><strong>Total Amount:</strong> <%= project.totalAmount %></div>
            <div class="col-md-4"><strong>Total Paid:</strong> <%= project.totalPaid %></div>
            <div class="col-md-4"><strong>Status:</strong> <%= project.status %></div>
          </div>
          <div class="row mt-2">
            <div class="col-md-4"><strong>Created:</strong> <%= project.projectCreatedDate ? project.projectCreatedDate.toISOString().slice(0,10) : '—' %></div>
            <div class="col-md-4"><strong>Live Date:</strong> <%= project.liveDate ? project.liveDate.toISOString().slice(0,10) : '—' %></div>
            <div class="col-md-4"><strong>Due Date:</strong> <%= project.dueDate ? project.dueDate.toISOString().slice(0,10) : '—' %></div>
          </div>
          <div class="mt-3">
            <strong>Services:</strong>
            <div class="mt-2">
              <% if (project.services && project.services.length) { %>
                <ul>
                  <% project.services.forEach(function(service){ %>
                    <li><%= service %></li>
                  <% }); %>
                </ul>
              <% } else { %>
                <span>—</span>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h5>Payments</h5>
          <div class="table-responsive">
            <table class="table table-striped align-middle">
              <thead>
                <tr>
                  <th>Amount</th>
                  <th>Mode</th>
                  <th>Paid On</th>
                  <th>Note</th>
                </tr>
              </thead>
              <tbody>
                <% if (project.payments && project.payments.length) { %>
                  <% project.payments.forEach(function(payment){ %>
                    <tr>
                      <td><%= payment.amount %></td>
                      <td><%= payment.mode %></td>
                      <td><%= payment.paidOn ? payment.paidOn.toISOString().slice(0,10) : '—' %></td>
                      <td><%= payment.note || '—' %></td>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr><td colspan="4">No payments yet.</td></tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
