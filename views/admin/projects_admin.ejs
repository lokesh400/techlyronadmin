<!DOCTYPE html>
<html>
<head>
  <title>Projects - Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('../partials/sidebar') %>
  <div class="content">
    <%- include('../partials/header', { admin: admin }) %>
    <div class="container-fluid mt-4">
      <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2 mb-3">
        <h3>Projects</h3>
        <a href="/admin/projects/create" class="btn btn-primary">Create Project</a>
      </div>
      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead>
            <tr>
              <th>Project</th>
              <th>Client</th>
              <th>Mobile</th>
              <th>Total</th>
              <th>Paid</th>
              <th>Status</th>
              <th>Live</th>
              <th>Due</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% projects.forEach(function(project){ %>
              <tr>
                <td><%= project.projectName %></td>
                <td><%= project.clientName %></td>
                <td><%= project.mobile %></td>
                <td><%= project.totalAmount %></td>
                <td><%= project.totalPaid %></td>
                <td><%= project.status %></td>
                <td><%= project.liveDate ? project.liveDate.toISOString().slice(0,10) : '—' %></td>
                <td><%= project.dueDate ? project.dueDate.toISOString().slice(0,10) : '—' %></td>
                <td>
                  <a href="/admin/projects/<%= project._id %>" class="btn btn-sm btn-info">View</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
