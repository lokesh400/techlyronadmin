<!DOCTYPE html>
<html>
<head>
  <title>Lead Details</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('../partials/sidebar') %>
  <div class="content">
    <%- include('../partials/header', { admin: admin }) %>
    <div class="container-fluid mt-4">
      <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2 mb-3">
        <h3 class="mb-0"><%= lead.name %></h3>
        <div class="d-flex flex-column flex-sm-row gap-2">
          <% if(currentUser && currentUser.role === 'Admin') { %>
            <a href="/admin/proposals/create/<%= lead._id %>" class="btn btn-sm btn-outline-primary">Create Proposal</a>
            <a href="/admin/agreements/create/<%= lead._id %>" class="btn btn-sm btn-outline-success">Create Agreement</a>
          <% } %>
          <% if (lead.editAllowed !== false) { %>
            <a href="/admin/leads/<%= lead._id %>/edit" class="btn btn-sm btn-outline-warning">Edit Lead</a>
          <% } %>
        </div>
      </div>
      <div class="row g-3">
        <div class="col-12 col-lg-6">
          <div class="card">
            <div class="card-body">
              <p><strong>Contact:</strong> <%= lead.contact || '' %></p>
              <p><strong>Email:</strong> <%= lead.email || '' %></p>
              <p><strong>Status:</strong> <%= lead.status || 'new' %></p>
              <p><strong>Business Name:</strong> <%= lead.businessName || '' %></p>
              <p><strong>Assigned To:</strong> <%= lead.assignedTo ? (lead.assignedTo.name || lead.assignedTo.email) : 'Unassigned' %></p>
              <p><strong>Services:</strong>
                <% if (lead.services && lead.services.length > 0) { %>
                  <%= lead.services.join(', ') %>
                <% } else { %>
                  None
                <% } %>
              </p>
              <p><strong>Last Followup:</strong> <%= lead.lastFollowupAt ? new Date(lead.lastFollowupAt).toLocaleString() : 'No followups yet' %></p>
              <p><strong>Notes:</strong> <%= lead.notes || '' %></p>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Add Followup</h5>
              <form action="/admin/leads/followups/create" method="POST" class="mb-3">
                <input type="hidden" name="lead" value="<%= lead._id %>">
                <div class="mb-3">
                  <label class="form-label">Note</label>
                  <textarea name="note" class="form-control" rows="3" required></textarea>
                </div>
                <button class="btn btn-primary">Add Followup (<%= currentUser.name %>)</button>
              </form>
              <h5 class="card-title">Followups</h5>
              <% if (followups && followups.length > 0) { %>
                <% followups.forEach(function(f){ %>
                  <div class="card mb-2">
                    <div class="card-body">
                      <p class="mb-1"><%= f.note %></p>
                      <small class="text-muted">By <%= f.createdByName || 'Worker' %> on <%= new Date(f.createdAt).toLocaleString() %></small>
                    </div>
                  </div>
                <% }) %>
              <% } else { %>
                <p class="text-muted">No followups yet.</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
