<!DOCTYPE html>
<html>
<head>
  <title>Leads - Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('../partials/sidebar') %>
  <div class="content">
    <%- include('../partials/header', { admin: currentUser }) %>
    <div class="container-fluid mt-4">
      <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2 mb-3">
        <h3>Leads</h3>
        <a href="/admin/leads/create" class="btn btn-primary">Create Lead</a>
      </div>
      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead>
            <tr>
              <th>Name</th>
              <th>Contact</th>
              <th>Status</th>
              <th>Business</th>
              <th>Last Followup</th>
              <th>Latest Note</th>
              <th>Assigned To</th>
              <th>Created By</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% leads.forEach(function(lead){ %>
              <tr>
                <td><%= lead.name %></td>
                <td><%= lead.contact || '' %></td>
                <td><%= lead.status || 'new' %></td>
                <td><%= lead.businessName || '' %></td>
                <td><%= lead.lastFollowupAt ? new Date(lead.lastFollowupAt).toLocaleString() : '-' %></td>
                <td><%= lead.lastFollowupNote || '-' %></td>
                <td><%= lead.assignedTo ? lead.assignedTo.name || lead.assignedTo.email : 'Unassigned' %></td>
                <td><%= lead.createdBy.name%></td>
                <td>
                  <a href="/admin/leads/<%= lead._id %>" class="btn btn-sm btn-info">View</a>
                  <% if (lead.editAllowed !== false) { %>
                    <a href="/admin/leads/<%= lead._id %>/edit" class="btn btn-sm btn-warning ms-1">Edit</a>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
